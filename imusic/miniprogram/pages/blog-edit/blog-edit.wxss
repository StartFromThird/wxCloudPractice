.blog-edit-area {
  padding: 20rpx;
  position: relative;
}
.blog-edit-area .blog-words-num {
  position: absolute;
  bottom: 34rpx;
  right: 40rpx;
}
.blog-words {
  height: 360rpx;
  width: 100%;
  line-height: 1.4; 
  box-sizing: border-box;
  padding: 20rpx 20rpx 40rpx 20rpx;
  border: 1px solid #ccc;
}
.blog-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.blog-footer .blog-public-btn{
  width: 100%;
  background: #d43c33;
  padding: 20rpx;
  color: #fff;
}
.blog-image-list {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding-left: 20rpx;
}
.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-bottom: 20rpx;
  margin-right: 22rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.image-wrap image {
  width: 100%;
  height: 100%;
}
.image-wrap .iconclose {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 6rpx;
  font-weight: bold;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
}
.blog-image-choose {
  border: 2rpx dashed #ccc;
  text-align: center;
  line-height: 200rpx;
}
.blog-image-choose .iconadd {
  font-size: 120rpx;
  color: #ccc;
}
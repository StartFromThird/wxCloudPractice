.blog-header {
  position: fixed;
  top: 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  background: #fff;
}
.blog-new-btn {
  margin-right: 14rpx;
}
.blog-new-btn .iconNewTab {
  font-size: 60rpx;
  color: #d43c33;
}
.blog-search {
  flex: 1;
}
.blog-list {
  margin-top: 120rpx;
}
.blog-panel {
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.blog-no-more-tip {
  padding: 8rpx 0 20rpx 0;
  text-align: center;
  color: #939393;
}